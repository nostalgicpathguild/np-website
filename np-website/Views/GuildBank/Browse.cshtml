@model np_website.Models.GuildBank.BrowseModel
@{
    ViewBag.Title = "Browse";
}

@section banner {
    <div id="banner">

    </div>
}

    <script src="//zam.zamimg.com/j/tooltips.js"></script>


<h2>Browse the guild bank</h2>

@using (Html.BeginRouteForm("PostBrowseGuildBank", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-1">
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
        <div class="col-md-5">
            @Html.TextBoxFor(m => m.Search, new { @class = "form-control" })
            @*<input type="text" name="search" id="search" class="form-control" />*@
        </div>
        <div class="col-md-6">
        </div>
    </div>
}

@if (Model.Items != null && Model.Items.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">ID</th>
                <th scope="col">Banker</th>
                <th scope="col">Location</th>
                <th scope="col">Count</th>
                <th scope="col">Slots</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
            <tr>
                @*<td scope="row"><a href="http://lucy.allakhazam.com/itemraw.html?id=@item.ItemId" data-eq="item=@item.ItemId">@item.Name</a></td>*@
                <td scope="row"><a href="http://everquest.allakhazam.com/db/item.html?item=@item.ItemId&source=lucy" data-eq="item=@item.ItemId" target="_blank">@item.Name</a></td>
                <th>@item.ItemId</th>
                <td>@item.CharacterName</td>
                <td>@item.Location</td>
                <td>@item.Count</td>
                <td>@item.Slots</td>
            </tr>
            }
        </tbody>
    </table>

    <div style="text-align:center">
        Tooltips by<br>
        <a href="http://everquest.allakhazam.com/" target="_blank">
            <img src="//zam.zamimg.com/i/tooltipsbyzam-everquest.png"
                 alt="EverQuest at ZAM" height="30" width="135">
        </a>
    </div>
}